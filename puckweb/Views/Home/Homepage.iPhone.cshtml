@using Page = puckweb.ViewModels.Page;
@model puckweb.ViewModels.Homepage
@{
    /*NOTE: this template is only here to show different examples of querying, feel free to delete*/

    Layout = "/views/shared/_layout.cshtml";
    ViewBag.Title = "Homepage";
    var qh = new QueryHelper<Section>()
        .CurrentLanguage()
        .ExplicitType();
    var sections = qh.GetAll();
    @qh.ToString()
    <br />
    @("section count: " + sections.Count)
    <br />
    var searchQuery = "croydon";
    var search = new QueryHelper<Page>();
    var sresults = search.AllFields(searchQuery).CurrentLanguage().GetAll();
    @("search for '" + searchQuery + "' count: " + sresults.Count)
    <br />
    var geoQuery = new QueryHelper<Page>();
    geoQuery
        .WithinMiles(x => x.Location.LongLat, -0.1277582, 51.5073509, 10)
        .SortByDistanceFromPoint(x => x.Location.LongLat, -0.127782, 51.5073509, desc: false);
    var georesults = geoQuery.GetAll();
    @("search for locations within 10miles of London(-0.1277582,51.5073509): " + georesults.Count)

}

<h2>@Model.Title - MOBILE</h2>

<h3>Carousel Items</h3>
<div>
    @foreach (var imageModel in Model.CarouselItems?.GetAll<ImageVM>()??new List<ImageVM>())
    {
        <img width="700" alt="@imageModel.Image.Description" src="@imageModel.Image.Path" />
    }

</div>
@foreach (var s in sections)
{
    <h1>@s.Title</h1>
    <div>
        @Html.Raw(s.MainContent)
    </div>
    <div><a href="@s.Url()">more</a></div>
}

<h3>Search Results for "@searchQuery"</h3>
@foreach (var r in sresults)
{
    <h1>@r.Title</h1>
    <div>
        @Html.Raw(r.MainContent.Highlight(searchQuery))
    </div>
}